@model IEnumerable<AplicacionPedidos.Models.ProductModel>

@{
    ViewData["Title"] = "Productos";
}

<h1>Catálogo de Productos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
</p>

<div class="card mb-4">
    <div class="card-header bg-light">
        <h5>Filtros y Búsqueda</h5>
    </div>
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Buscar por nombre o descripción</label>
                <div class="input-group">
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Buscar...">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
            <div class="col-md-3">
                <label class="form-label">Precio mínimo</label>
                <input type="number" name="minPrice" value="@ViewData["MinPriceFilter"]" class="form-control" placeholder="0.00" min="0" step="0.01">
            </div>
            <div class="col-md-3">
                <label class="form-label">Precio máximo</label>
                <input type="number" name="maxPrice" value="@ViewData["MaxPriceFilter"]" class="form-control" placeholder="10000.00" min="0" step="0.01">
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <a asp-action="Index" class="btn btn-outline-secondary w-100">Limpiar</a>
            </div>
        </form>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSortParm"]" asp-route-searchString="@ViewData["CurrentFilter"]"
                       asp-route-minPrice="@ViewData["MinPriceFilter"]" asp-route-maxPrice="@ViewData["MaxPriceFilter"]"
                       class="text-white text-decoration-none">
                        @Html.DisplayNameFor(model => model.Precio)
                        @if (ViewData["CurrentSort"].ToString() == "price_asc")
                        {
                            <i class="bi bi-sort-numeric-down"></i>
                        }
                        else if (ViewData["CurrentSort"].ToString() == "price_desc")
                        {
                            <i class="bi bi-sort-numeric-down-alt"></i>
                        }
                        else
                        {
                            <i class="bi bi-arrow-down-up"></i>
                        }
                    </a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Stock)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @if (item.Descripcion != null && item.Descripcion.Length > 50)
                        {
                            @(item.Descripcion.Substring(0, 50) + "...")
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        }
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @if (item.Stock <= 5)
                        {
                            <span class="badge bg-danger">@item.Stock</span>
                        }
                        else
                        {
                            <span class="badge bg-success">@item.Stock</span>
                        }
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detalles">
                                <i class="bi bi-info-circle"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        No se encontraron productos con los criterios de búsqueda seleccionados.
    </div>
}
