                </div>
                <div class="card-body p-0">
                    <div class="row g-0">
                        <div class="col-md-4 p-4 d-flex flex-column justify-content-center align-items-center" style="background-color: #f8f9fa; border-right: 1px solid #eee;">
                            <div class="product-image-container mb-3" style="width: 100%; max-height: 300px; display: flex; align-items: center; justify-content: center;">
                                <img src="@(string.IsNullOrEmpty(Model.ImagenUrl) ? "/images/products/no-image.jpg" : Model.ImagenUrl)" alt="@Model.Nombre" style="max-width: 100%; max-height: 300px; object-fit: contain;" class="img-fluid rounded shadow-sm" />
                            </div>
                            
                            <div class="price-tag text-center">
                                <span class="badge p-2 mb-2" style="background-color: #DBC6C0; color: #1C3150; font-size: 1.2rem;">@Model.Precio.ToString("C")</span>
                                <div class="stock-info">
                                    @{
                                        var stockColor = Model.Stock > 10 ? "bg-success" : (Model.Stock > 0 ? "bg-warning" : "bg-danger");
                                        var stockText = Model.Stock > 10 ? "En stock" : (Model.Stock > 0 ? "Stock bajo" : "Sin stock");
                                    }
                                    <span class="badge @stockColor">@stockText (@Model.Stock)</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8 p-4">
                            <h2 class="mb-3" style="color: #1C3150;">@Model.Nombre</h2>
                            
                            @if (!string.IsNullOrEmpty(Model.Categoria))
                            {
                                <div class="mb-3">
                                    <span class="badge" style="background-color: #78809D; padding: 0.4rem 0.8rem;">@Model.Categoria</span>
                                </div>
                            }
                            
                            <div class="product-description mb-4">
                                <h5 class="mb-2" style="color: #4D6489;">Descripción</h5>
                                <p>@Model.Descripcion</p>
                            </div>
                            
                            <div class="product-details">
                                <h5 class="mb-3" style="color: #4D6489;">Detalles del Producto</h5>
                                <table class="table table-striped">
                                    <tbody>
                                        <tr>
                                            <th style="width: 30%">ID:</th>
                                            <td>@Model.Id</td>
                                        </tr>
                                        <tr>
                                            <th>Precio:</th>
                                            <td>@Model.Precio.ToString("C")</td>
                                        </tr>
                                        <tr>
                                            <th>Stock:</th>
                                            <td>@Model.Stock unidades</td>
                                        </tr>
                                        <tr>
                                            <th>Categoría:</th>
                                            <td>@(string.IsNullOrEmpty(Model.Categoria) ? "Sin categoría" : Model.Categoria)</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white p-4">
                    <div class="d-flex justify-content-between">
                        @if (User.IsInRole("Admin") || User.IsInRole("Empleado"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn" style="background-color: #1C3150; color: white;">
                                <i class="bi bi-pencil me-2"></i>Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                <i class="bi bi-trash me-2"></i>Eliminar
                            </a>
                        }
                        else
                        {
                            <a href="#" class="btn" style="background-color: #4D6489; color: white;">
