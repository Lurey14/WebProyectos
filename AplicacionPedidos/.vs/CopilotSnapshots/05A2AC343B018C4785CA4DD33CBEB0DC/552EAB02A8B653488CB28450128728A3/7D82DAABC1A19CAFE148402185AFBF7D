@model IEnumerable<AplicacionPedidos.Models.UserModel>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold" style="color: #1C3150;">Gestión de Usuarios</h1>
        <a asp-action="Create" class="btn px-4 py-2" style="background-color: #1C3150; color: white; border-radius: 6px;">
            <i class="bi bi-plus-circle me-2"></i>Nuevo Usuario
        </a>
    </div>
    
    <div class="card border-0 shadow" style="border-radius: 10px; overflow: hidden;">
        <div class="card-header d-flex justify-content-between align-items-center py-3" style="background-color: #4D6489; color: white;">
            <h5 class="mb-0 fw-bold">Lista de Usuarios</h5>
            <div class="input-group" style="max-width: 300px;">
                <input type="text" class="form-control" placeholder="Buscar usuario..." id="searchInput">
                <button class="btn btn-light" type="button">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="usersTable">
                    <thead>
                        <tr class="align-middle" style="background-color: #4D6489; color: white;">
                            <th class="px-4 py-3">
                                <i class="bi bi-person me-2"></i>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th class="px-4 py-3">
                                <i class="bi bi-envelope me-2"></i>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th class="px-4 py-3">
                                <i class="bi bi-key me-2"></i>
                                @Html.DisplayNameFor(model => model.Password)
                            </th>
                            <th class="px-4 py-3">
                                <i class="bi bi-person-badge me-2"></i>
                                @Html.DisplayNameFor(model => model.Rol)
                            </th>
                            <th class="px-4 py-3 text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model) {
                        <tr class="align-middle">
                            <td class="px-4 py-3">
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td class="px-4 py-3">
                                <a href="mailto:@item.Email" class="text-decoration-none" style="color: #4D6489;">
                                    @Html.DisplayFor(modelItem => item.Email)
                                </a>
                            </td>
                            <td class="px-4 py-3">
                                ••••••••
                            </td>
                            <td class="px-4 py-3">
                                @{
                                    var badgeColor = item.Rol == "Admin" ? "#1C3150" : 
                                                     item.Rol == "Cliente" ? "#78809D" : "#4D6489";
                                }
                                <span class="badge py-2 px-3" style="background-color: @badgeColor; font-weight: 500;">
                                    @Html.DisplayFor(modelItem => item.Rol)
                                </span>
                            </td>
                            <td class="px-4 py-3 text-center">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detalles">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white py-3">
            <nav aria-label="Paginación de usuarios">
                <ul class="pagination justify-content-center mb-0">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Anterior" style="color: #4D6489;">
                            <span aria-hidden="true">Anterior</span>
                        </a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#" style="background-color: #4D6489; border-color: #4D6489;">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#" style="color: #4D6489;">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#" style="color: #4D6489;">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Siguiente" style="color: #4D6489;">
                            <span aria-hidden="true">Siguiente</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function(){
            // Función de búsqueda
            $("#searchInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#usersTable tbody tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
            
            // Funcionalidad de paginación (simulada para demostración)
            $(".page-link").on("click", function(e) {
                e.preventDefault();
                
                // Quitar la clase active de todos los elementos
                $(".page-item").removeClass("active");
                
                // Agregar la clase active al elemento padre del enlace clicado
                $(this).parent().addClass("active");
                
                // Aquí iría la lógica real de paginación
            });
        });
    </script>
}
