    <!-- Script para sanitizar input de usuario -->
    <script>
        // Función para sanitizar inputs
        function sanitizeInput(input) {
            return input.replace(/[&<>"']/g, function(match) {
                return {
                    '&': '&amp;',
                    '<': '&lt;',
                    '>': '&gt;',
                    '"': '&quot;',
                    "'": '&#39;'
                }[match];
            });
        }

        // Aplicar a todos los inputs y textareas en formularios
        document.addEventListener('DOMContentLoaded', function() {
            const forms = document.querySelectorAll('form');
            forms.forEach(form => {
                form.addEventListener('submit', function() {
                    const inputs = form.querySelectorAll('input[type="text"], input[type="search"], textarea');
                    inputs.forEach(input => {
                        // Solo sanitizar valores que no sean para campos que requieren HTML
                        if (!input.classList.contains('allow-html')) {
                            input.value = sanitizeInput(input.value);
                        }
                    });
                });
            });

            // Añadir efectos visuales para enlaces y botones
            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => {
                link.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                });
                link.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
