@model IEnumerable<AplicacionPedidos.Models.ProductModel>

@{
    ViewData["Title"] = "Productos";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold" style="color: #1C3150;">Gestión de Productos</h1>
        @if (User.IsInRole("Admin") || User.IsInRole("Empleado"))
        {
            <a asp-action="Create" class="btn px-4 py-2" style="background-color: #1C3150; color: white; border-radius: 6px;">
                <i class="bi bi-plus-circle me-2"></i>Nuevo Producto
            </a>
        }
    </div>

    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mb-4">
            <i class="bi bi-exclamation-triangle me-2"></i>@ViewData["ErrorMessage"]
        </div>
    }
    
    <div class="card border-0 shadow mb-4" style="border-radius: 10px; overflow: hidden; background-color: #f8f9fa;">
        <div class="card-header py-3" style="background-color: #4D6489; color: white;">
            <h5 class="mb-0 fw-bold"><i class="bi bi-funnel me-2"></i>Filtros de Búsqueda</h5>
        </div>
        <div class="card-body p-3">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Nombre o descripción</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" name="searchString" class="form-control" value="@ViewData["CurrentFilter"]" placeholder="Buscar producto..." />
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Categoría</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-tag"></i></span>
                        <select name="categoria" class="form-select">
                            <option value="">Todas las categorías</option>
                            @if (ViewData["Categorias"] != null)
                            {
                                foreach (var categoria in (List<string>)ViewData["Categorias"])
                                {
                                    if (!string.IsNullOrEmpty(categoria))
                                    {
                                        <option value="@categoria" selected="@(ViewData["CurrentCategoria"]?.ToString() == categoria)">@categoria</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Rango de precio</label>
                    <div class="d-flex">
                        <div class="input-group me-2">
                            <span class="input-group-text"><i class="bi bi-currency-dollar"></i></span>
                            <input type="number" name="precioMin" step="0.01" class="form-control" value="@ViewData["CurrentPrecioMin"]" placeholder="Mínimo" />
                        </div>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-currency-dollar"></i></span>
                            <input type="number" name="precioMax" step="0.01" class="form-control" value="@ViewData["CurrentPrecioMax"]" placeholder="Máximo" />
                        </div>
                    </div>
                </div>
                <div class="col-md-1 d-flex align-items-end">
                    <button type="submit" class="btn w-100" style="background-color: #4D6489; color: white;">
                        <i class="bi bi-filter"></i> Filtrar
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <div class="card border-0 shadow" style="border-radius: 10px; overflow: hidden;">
        <div class="card-header d-flex justify-content-between align-items-center py-3" style="background-color: #4D6489; color: white;">
            <h5 class="mb-0 fw-bold"><i class="bi bi-box-seam me-2"></i>Lista de Productos</h5>
            <span class="badge bg-white text-dark">@Model.Count() productos</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="productsTable">
                    <thead>
                        <tr class="align-middle" style="background-color: #4D6489; color: white;">
                            <th class="px-4 py-3">
                                <a asp-action="Index" asp-route-sortOrder="@ViewData["NombreSortParm"]" class="text-white text-decoration-none">
                                    <i class="bi bi-box me-2"></i>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                    @if (ViewData["NombreSortParm"] == "")
                                    {
                                        <i class="bi bi-arrow-down-short"></i>
                                    }
                                    else if (ViewData["NombreSortParm"]?.ToString() == "nombre_desc")
                                    {
                                        <i class="bi bi-arrow-up-short"></i>
                                    }
                                </a>
                            </th>
                            <th class="px-4 py-3 d-none d-md-table-cell">
                                <i class="bi bi-card-text me-2"></i>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th class="px-4 py-3">
                                <a asp-action="Index" asp-route-sortOrder="@ViewData["PrecioSortParm"]" class="text-white text-decoration-none">
                                    <i class="bi bi-currency-dollar me-2"></i>
                                    @Html.DisplayNameFor(model => model.Precio)
                                    @if (ViewData["PrecioSortParm"]?.ToString() == "Precio")
                                    {
                                        <i class="bi bi-arrow-down-short"></i>
                                    }
                                    else if (ViewData["PrecioSortParm"]?.ToString() == "precio_desc")
                                    {
                                        <i class="bi bi-arrow-up-short"></i>
                                    }
                                </a>
                            </th>
                            <th class="px-4 py-3">
                                <a asp-action="Index" asp-route-sortOrder="@ViewData["StockSortParm"]" class="text-white text-decoration-none">
                                    <i class="bi bi-boxes me-2"></i>
                                    @Html.DisplayNameFor(model => model.Stock)
                                    @if (ViewData["StockSortParm"]?.ToString() == "Stock")
                                    {
                                        <i class="bi bi-arrow-down-short"></i>
                                    }
                                    else if (ViewData["StockSortParm"]?.ToString() == "stock_desc")
                                    {
                                        <i class="bi bi-arrow-up-short"></i>
                                    }
                                </a>
                            </th>
                            <th class="px-4 py-3">
                                <a asp-action="Index" asp-route-sortOrder="@ViewData["CategoriaSortParm"]" class="text-white text-decoration-none">
                                    <i class="bi bi-tag me-2"></i>
                                    @Html.DisplayNameFor(model => model.Categoria)
                                    @if (ViewData["CategoriaSortParm"]?.ToString() == "Categoria")
                                    {
                                        <i class="bi bi-arrow-down-short"></i>
                                    }
                                    else if (ViewData["CategoriaSortParm"]?.ToString() == "categoria_desc")
                                    {
                                        <i class="bi bi-arrow-up-short"></i>
                                    }
                                </a>
                            </th>
                            <th class="px-4 py-3 text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model) {
                        <tr class="align-middle">
                            <td class="px-4 py-3">
                                <div class="d-flex align-items-center">
                                    <div class="product-img-container me-3" style="width: 50px; height: 50px; overflow: hidden; border-radius: 8px;">
                                        <img src="@(string.IsNullOrEmpty(item.ImagenUrl) ? "/images/products/no-image.jpg" : item.ImagenUrl)" alt="@item.Nombre" style="width: 100%; height: 100%; object-fit: cover;">
                                    </div>
                                    <div>
                                        <div class="fw-bold" style="color: #1C3150;">@item.Nombre</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-4 py-3 d-none d-md-table-cell">
                                <div class="text-truncate" style="max-width: 250px;" data-bs-toggle="tooltip" data-bs-placement="top" title="@item.Descripcion">
                                    @item.Descripcion
                                </div>
                            </td>
                            <td class="px-4 py-3">
                                <div class="fw-bold" style="color: #4D6489;">
                                    @item.Precio.ToString("C")
                                </div>
                            </td>
                            <td class="px-4 py-3">
                                @{
                                    var stockColor = item.Stock > 10 ? "bg-success" : (item.Stock > 0 ? "bg-warning" : "bg-danger");
                                }
                                <span class="badge @stockColor">@item.Stock</span>
                            </td>
                            <td class="px-4 py-3">
                                @if (!string.IsNullOrEmpty(item.Categoria))
                                {
                                    <span class="badge" style="background-color: #78809D;">@item.Categoria</span>
                                }
                                else
                                {
                                    <span class="text-muted">Sin categoría</span>
                                }
                            </td>
                            <td class="px-4 py-3 text-center">
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detalles">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    @if (User.IsInRole("Admin") || User.IsInRole("Empleado"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4">
                                <div class="py-5">
                                    <i class="bi bi-search" style="font-size: 2rem; color: #AAA2B1;"></i>
                                    <h5 class="mt-3 mb-1">No se encontraron productos</h5>
                                    <p class="text-muted">Intenta con otros criterios de búsqueda</p>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function(){
            $('[data-bs-toggle="tooltip"]').tooltip();
        });
    </script>
}
