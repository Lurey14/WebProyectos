@model AplicacionPedidos.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0" style="background-color: #fff; border-radius: 15px; overflow: hidden;">
                <div class="card-header border-0 py-4" style="background-color: #4D6489; color: white;">
                    <h2 class="text-center mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold" style="color: #1C3150;">Email</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="ejemplo@correo.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold" style="color: #1C3150;">Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input asp-for="Password" class="form-control" placeholder="Ingresa tu contraseña" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-4 form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">Recordar mi cuenta</label>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-lg" style="background-color: #1C3150; color: white;">
                                <i class="bi bi-box-arrow-in-right me-2"></i> Iniciar Sesión
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer border-0 p-4 text-center" style="background-color: #f8f9fa;">
                    <p class="mb-0">¿No tienes una cuenta? <a asp-action="Register" style="color: #4D6489;">Regístrate aquí</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}