@{
    ViewData["Title"] = "Acceso Denegado";
}

<div class="container py-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm" style="border-radius: 15px;">
                <div class="card-body p-5">
                    <i class="bi bi-shield-exclamation text-danger" style="font-size: 5rem;"></i>
                    <h1 class="mt-3 mb-4" style="color: #1C3150;">@ViewData["Title"]</h1>
                    <p class="lead mb-4">No tienes permisos para acceder a esta página.</p>
                    <p class="text-muted mb-4">Por favor, contacta al administrador si necesitas acceso a esta sección o regresa a la página principal.</p>
                    
                    <div class="d-flex justify-content-center gap-3">
                        <a asp-controller="Home" asp-action="Index" class="btn" style="background-color: #4D6489; color: white;">
                            <i class="bi bi-house-door me-2"></i> Ir a Inicio
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i> Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>