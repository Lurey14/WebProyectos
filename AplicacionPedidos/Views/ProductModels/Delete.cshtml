@model AplicacionPedidos.Models.ProductModel

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold" style="color: #1C3150;">Eliminar Producto</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Volver a la Lista
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card custom-card">
                <div class="card-header bg-danger text-white py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-exclamation-triangle me-2"></i>Confirmación de Eliminación
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning mb-4">
                        <div class="d-flex">
                            <div class="me-3">
                                <i class="bi bi-exclamation-triangle-fill" style="font-size: 2rem;"></i>
                            </div>
                            <div>
                                <h5 class="alert-heading">¿Está seguro de que desea eliminar este producto?</h5>
                                <p class="mb-0">Esta acción no se puede deshacer. El producto será eliminado permanentemente del sistema.</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card mb-4">
                        <div class="card-header" style="background-color: #f8f9fa;">
                            <h6 class="mb-0">Información del producto a eliminar</h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3 text-center mb-3 mb-md-0">
                                    <img src="@(string.IsNullOrEmpty(Model.ImagenUrl) ? "/images/products/no-image.jpg" : Model.ImagenUrl)" alt="@Model.Nombre" style="max-width: 100%; max-height: 120px; object-fit: contain;" class="img-fluid rounded shadow-sm" />
                                </div>
                                <div class="col-md-9">
                                    <h4 style="color: #1C3150;">@Model.Nombre</h4>
                                    @if (!string.IsNullOrEmpty(Model.Categoria))
                                    {
                                        <span class="badge mb-2" style="background-color: #78809D;">@Model.Categoria</span>
                                    }
                                    <p class="text-muted mb-2">@(Model.Descripcion?.Length > 100 ? Model.Descripcion.Substring(0, 100) + "..." : Model.Descripcion)</p>
                                    <div class="d-flex mt-2">
                                        <div class="me-4">
                                            <strong>Precio:</strong> <span style="color: #4D6489;">@Model.Precio.ToString("C")</span>
                                        </div>
                                        <div>
                                            <strong>Stock:</strong> @Model.Stock unidades
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <form asp-action="Delete" id="deleteForm">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                                <i class="bi bi-trash me-2"></i>Eliminar Producto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmación de eliminación</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>¿Está seguro de que desea eliminar permanentemente el producto <strong>@Model.Nombre</strong>?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-danger" id="confirmDelete">Eliminar</button>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $("#confirmDelete").click(function() {
                $("#deleteForm").submit();
            });
        });
    </script>
}
