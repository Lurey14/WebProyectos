<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Pedidos</title>
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; img-src 'self' data: https:; style-src 'self' https://cdn.jsdelivr.net https://fonts.googleapis.com 'unsafe-inline'; script-src 'self' https://cdn.jsdelivr.net 'unsafe-inline'; font-src 'self' https://cdn.jsdelivr.net https://fonts.gstatic.com;" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AplicacionPedidos.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="icon" type="image/png" href="~/images/favicon.png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Quicksand', sans-serif;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-bag-heart-fill me-2"></i>Sistema de Pedidos
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-heart"></i> Inicio
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="UserModels" asp-action="Index">
                                        <i class="bi bi-people"></i> Usuarios
                                    </a>
                                </li>
                            }
                            else if (User.IsInRole("Empleado"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="UserModels" asp-action="Index">
                                        <i class="bi bi-people"></i> Clientes
                                    </a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="ProductModels" asp-action="Index">
                                    <i class="bi bi-box-seam"></i> Productos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="OrderModels" asp-action="Index">
                                    <i class="bi bi-cart3"></i> Pedidos
                                </a>
                            </li>
                            
                            @if (!User.IsInRole("Admin") && !User.IsInRole("Empleado"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="OrderModels" asp-action="CreateRapido">
                                        <i class="bi bi-basket2"></i> Nuevo Pedido
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                    <div class="d-flex align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <button class="btn text-white dropdown-toggle d-flex align-items-center" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="user-avatar me-2">
                                        @(User.Identity.Name?.Substring(0, 1).ToUpper() ?? "A")
                                    </div>
                                    <span class="d-none d-md-inline">@Html.Raw(System.Web.HttpUtility.HtmlEncode(User.Identity.Name ?? "Usuario"))</span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown" style="min-width: 200px;">
                                    <li>
                                        <span class="dropdown-item-text">
                                            <span class="d-block text-muted small">Sesión iniciada como</span>
                                            <strong>@Html.Raw(System.Web.HttpUtility.HtmlEncode(User.Identity.Name ?? "Usuario"))</strong>
                                        </span>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard"><i class="bi bi-gear me-2"></i>Administración</a></li>
                                    }
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i class="bi bi-person me-2"></i>Mi Perfil</a></li>
                                    <li><a class="dropdown-item" asp-controller="OrderModels" asp-action="Index"><i class="bi bi-bag me-2"></i>Mis Pedidos</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form class="d-inline" asp-controller="Account" asp-action="Logout">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Login" class="btn btn-login">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Iniciar Sesión
                            </a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    @if (ViewContext.RouteData.Values["controller"].ToString() == "Home" && ViewContext.RouteData.Values["action"].ToString() == "Index")
    {
        <div class="welcome-section">
            <div class="container">
                <h1>Bienvenido al Sistema de Pedidos</h1>
                <p>Gestiona tus pedidos, productos y usuarios de forma eficiente.</p>
                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="mt-4">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-login me-2">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
                        </a>
                    </div>
                }
            </div>
        </div>
    }

    <div class="container mb-4 mt-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-3 mb-4 mb-md-0">
                    <h5>Sistema de Pedidos</h5>
                    <p>Aplicación para gestionar pedidos, productos y usuarios de manera eficiente y sencilla.</p>
                </div>
                
                <div class="col-md-3 mb-4 mb-md-0">
                    <h5>Enlaces</h5>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Inicio</a></li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li><a asp-controller="ProductModels" asp-action="Index">Productos</a></li>
                            <li><a asp-controller="OrderModels" asp-action="Index">Pedidos</a></li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li><a asp-controller="UserModels" asp-action="Index">Usuarios</a></li>
                            }
                        }
                        <li><a asp-controller="Home" asp-action="Privacy">Privacidad</a></li>
                    </ul>
                </div>
                
                
            </div>
            
            <hr>
            
            <div class="row">
                <div class="col-md-6 text-center text-md-start copyright">
                    <p>&copy; 2025 - Sistema de Pedidos - Todos los derechos reservados</p>
                </div>
                <div class="col-md-6 text-center text-md-end copyright">
                    <p>Desarrollado para Universidad del Valle</p>
                </div>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        function sanitizeInput(input) {
            return input.replace(/[&<>"']/g, function(match) {
                return {
                    '&': '&amp;',
                    '<': '&lt;',
                    '>': '&gt;',
                    '"': '&quot;',
                    "'": '&#39;'
                }[match];
            });
        }

        document.addEventListener('DOMContentLoaded', function() {
            const forms = document.querySelectorAll('form');
            forms.forEach(form => {
                form.addEventListener('submit', function() {
                    const inputs = form.querySelectorAll('input[type="text"], input[type="search"], textarea');
                    inputs.forEach(input => {
                        if (!input.classList.contains('allow-html')) {
                            input.value = sanitizeInput(input.value);
                        }
                    });
                });
            });

            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => {
                link.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                });
                link.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
