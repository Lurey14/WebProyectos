@model AplicacionPedidos.Models.OrderModel

@{
    ViewData["Title"] = "Editar Pedido";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold" style="color: #1C3150;">Editar Pedido #@Model.Id</h1>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Volver a la Lista
            </a>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn ms-2" style="background-color: #4D6489; color: white;">
                <i class="bi bi-eye me-2"></i>Ver Detalles
            </a>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card border-0 shadow" style="border-radius: 10px; overflow: hidden;">
        <div class="card-header py-3" style="background-color: #4D6489; color: white;">
            <h5 class="mb-0 fw-bold"><i class="bi bi-pencil-square me-2"></i>Actualizar Estado del Pedido</h5>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="Fecha" />
                <input type="hidden" asp-for="Total" />
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-medium">Cliente</label>
                        <input type="text" class="form-control" value="@Model.Cliente?.Nombre" readonly />
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-medium">Fecha del pedido</label>
                        <input type="text" class="form-control" value="@Model.Fecha.ToString("dd/MM/yyyy HH:mm")" readonly />
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Estado" class="form-label fw-medium">Estado</label>
                        <select asp-for="Estado" asp-items="ViewBag.Estados" class="form-select">
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-medium">Total</label>
                        <input type="text" class="form-control" value="@Model.Total.ToString("C")" readonly />
                    </div>
                </div>
                
                <div class="mb-3">
                    <label asp-for="DireccionEntrega" class="form-label fw-medium">Dirección de Entrega</label>
                    <textarea asp-for="DireccionEntrega" class="form-control" rows="2"></textarea>
                    <span asp-validation-for="DireccionEntrega" class="text-danger"></span>
                </div>
                
                <div class="mb-4">
                    <label asp-for="Notas" class="form-label fw-medium">Notas</label>
                    <textarea asp-for="Notas" class="form-control" rows="3" placeholder="Notas adicionales sobre este pedido"></textarea>
                    <span asp-validation-for="Notas" class="text-danger"></span>
                </div>
                
                <hr class="my-4" />
                
                <div class="mb-3">
                    <h6 class="fw-bold">Productos en este pedido</h6>
                    <div class="table-responsive">
                        <table class="table table-sm table-striped">
                            <thead>
                                <tr>
                                    <th>Producto</th>
                                    <th class="text-center">Cantidad</th>
                                    <th class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Items != null)
                                {
                                    foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>@item.Producto?.Nombre</td>
                                            <td class="text-center">@item.Cantidad</td>
                                            <td class="text-end">@item.Subtotal.ToString("C")</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        Los productos no pueden modificarse una vez creado el pedido.
                    </div>
                </div>
                
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn" style="background-color: #1C3150; color: white;">
                        <i class="bi bi-save me-2"></i>Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function(){
            setTimeout(function(){
                $('.alert-dismissible').alert('close');
            }, 5000);
        });
    </script>
}
